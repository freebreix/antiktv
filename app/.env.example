# AntikTV Electron Configuration
# Copy this file to .env and configure your settings

# Antik Credentials (required)
ANTIK_EMAIL=your-email@example.com
ANTIK_PASSWORD=your-password

# Device ID (required - set a unique identifier for this device)
# Example: ANTIK_DEVICE_ID=MyLivingRoomTV-001
ANTIK_DEVICE_ID=

# API Configuration (optional)
ANTIK_API_URL=
ANTIK_REGION=SK

# Development Settings
NODE_ENV=development

# Server Configuration
PORT=5173
HOST=127.0.0.1

# MPV Configuration (optional)
MPV_BINARY_PATH=
MPV_SOCKET_PATH=

# Electron Configuration
ELECTRON_IS_DEV=true
ELECTRON_ENABLE_LOGGING=true
